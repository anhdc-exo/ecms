<?xml version="1.0" encoding="UTF-8"?>
<bundle>
  <task-name>Evaluar vacaciones</task-name>
  <title>Evaluar vacaciones</title>
  <approve>
    <submit>Aprobar</submit>
    <value>Aprobar las vacaciones</value>
  </approve>
  <disapprove>
    <submit>Desaprobar</submit>
    <value>Desaprobar vacaciones</value>
  </disapprove>
  <refuse>
    <submit>Rechazar</submit>
    <value>Rechazar vacaciones</value>
  </refuse>
  <!--
  #variable title and label
  -->
  <initiator>
    <title>Quien pidió vacaciones</title>
    <label>Iniciador:</label>
  </initiator>
  <start>
    <title>Comienzo de las vacaciones:</title>
    <label>Comienzo (dd/mm/aaaa):</label>
  </start>
  <end>
    <title>Fin de vacaciones:</title>
    <label>Fin (dd/mm/aaaa):</label>
  </end>
  
  <grant>
    <submit>Concesión</submit>
    <value>Conceder Aumento de Sueldo</value>
  </grant>
  <deny>
    <submit>Negar</submit>
    <value>Negar Aumento Salarial</value>
  </deny>
  <reason>
    <title>Razón dada por el iniciador</title>
    <label>Razón:</label>
  </reason>
  <amount-asked>
    <title>Monto solicitado:</title>
    <label>Cantidad:</label>
  </amount-asked>
  <amount-granted>
    <title>Cantidad Concedida:</title>
    <label>Concesión:</label>
  </amount-granted>
  <priority>
    <title>Establecer la prioridad</title>
    <label>Prioridad:</label>
  </priority>
  <rewarded>
    <title>Fue recompensado el iniciador</title>
    <label>Recompensado:</label>
    <checkbox>¡Sí el iniciador ha sido recompensado!</checkbox>
  </rewarded>
  
  <cancel>Cancelar</cancel>
